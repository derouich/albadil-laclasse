<!DOCTYPE html>
<html lang="en">

<head>

	<title>Edit Profile</title>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<%- include('./layout/css') -%>
	<style>
		.stats {
			padding: 10px 18px;
			background: #fff;
			width: 100%;
			border: 1px solid #dbdbdb;
			float: inherit;
		}

		.stats_icon {
			float: right;
			font-size: 32px;
			color: #f7b131;
		}

		.stats_title {
			float: left;
			padding-top: 8px;
			font-size: 20px;
		}

		.stats_count {
			margin-top: 15px;
			width: 100%;
			float: left;
			border-bottom: 1px solid #000;
			font-size: 30px;
			font-weight: 900;
		}
	</style>


</head>

<body>



	<%- include('./layout/header') -%>


	<%- include('./layout/sidebar') -%>

	<div class="main-site-area-wrapper" id="sliding2">

		<div class="admin-dashboard-wrapper clearfix">
			<div class="conatiner-fluid clearfix">

				<div class="col-md-12">
					<div class="height-wrapper">
						<div class="dashboard-content clearfix"
							style="height: auto !important;padding-bottom: 0px !important">
							<div class="form-wrapper clearfix" style="padding: 40px !important">
								<table class="table table-bordered table-hover" id="example" style="width:100%;">
									<thead class="text-center">
										<tr>
											<th class="text-center">Name</th>
											<th class="text-center">Email</th>
											<th class="text-center">Phone</th>
											<th class="text-center">Teacher</th>
											<th class="text-center">Status</th>
											<th class="text-center">Action</th>
										</tr>
									</thead>
									<tbody class="text-center"></tbody>
								</table>
							</div>

						</div>

					</div>
				</div>

			</div>
		</div>



	</div>

	<%- include('./layout/javascript') -%>
	<script>
		$(document).ready(function () {
			$(document).on('click', '.paginate_button', function () {
				blockUi();
			});
			// var i = 1;
			//blockUi();
			$('#example').DataTable({
				serverSide: true,
				ajax: {
					url: '/get-admins',
					type: 'GET',
					dataSrc: "users"
				},
				columns: [
					// {
					// 	data: null, render: function (data, type, row) {
					// 		$.unblockUI();
					// 		return i++;
					// 	}
					// },
					{
						data: 'fullName', render: function (data, type, row) {
							$.unblockUI();
							$.fn.dataTable.render.text()
							if (!data) {
								return '<span style="color:red;">N/A</span>';
							} else {
								return data;
							}
						}
					},
					{ data: 'email',render: $.fn.dataTable.render.text() },
					{
						data: 'phone', render: function (data, type, row) {
							$.fn.dataTable.render.text();
							if (!data) {
								return '<span style="color:red;">N/A</span>';
							} else {
								return data;
							}
						}
					},
					{ data: 'isModerator', render: $.fn.dataTable.render.text() },
					{ data: 'status', render: $.fn.dataTable.render.text() },
					{
						data: null, render: function (data, type, row) {
							$.fn.dataTable.render.text();
							return '<a href="/delete-admin/'+row.id +'" class="btn" style="background: #2dbef7;color:#fff;margin-right: 10px;">Delete Admin</a>';
						}
					}
				]
			});

		});
	</script>

</body>

</html>
